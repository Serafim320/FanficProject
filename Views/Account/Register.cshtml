@model fanfic.by.ViewModels.RegisterViewModel

<div class="container">
    <form method="post" asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly"></div>
        <h2 class="text-center">Регистрация пользователя</h2>
        <div class="form-group row justify-content-md-center">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-5">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row justify-content-md-center">
            <label asp-for="Password" class="col-sm-2 col-form-label">Пароль</label>
            <div class="col-sm-5">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row justify-content-md-center">
            <label asp-for="PasswordConfirm" class="col-sm-2 col-form-label">Подтверждение пароля</label>
            <div class="col-sm-5">
                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Пароль" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>
        <div class="form-group row justify-content-md-center">
            <input type="submit" value="Регистрация" class="btn btn-primary center" />
        </div>

    </form>
</div>